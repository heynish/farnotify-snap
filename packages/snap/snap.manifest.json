{
  "version": "0.1.0",
  "description": "Get Farcaster trending mints notifications hourly on MetaMask.",
  "proposedName": "FarNotify",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/template-snap-monorepo.git"
  },
  "source": {
    "shasum": "R8MWvDXfgMrb1KeI+uFJJHwGbAc8jtZ9G9qpSE96gKY=",
    "location": {
      "npm": {
        "filePath": "dist/bundle.js",
        "iconPath": "images/icon.svg",
        "packageName": "snap",
        "registry": "https://registry.npmjs.org/"
      }
    }
  },
  "initialPermissions": {
    "snap_dialog": {},
    "endowment:page-home": {},
    "endowment:lifecycle-hooks": {},
    "snap_notify": {},
    "endowment:cronjob": {
      "jobs": [
        {
          "expression": "* * * * *",
          "request": {
            "method": "notifyCronJob"
          }
        },
        {
          "expression": "0 * * * *",
          "request": {
            "method": "garbageCollectCronJob"
          }
        }
      ]
    },
    "endowment:network-access": {}
  },
  "manifestVersion": "0.1"
}
